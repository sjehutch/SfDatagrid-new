<toolkit:Popup
    x:Class="SfDatagrid.Popups.MultiSelectPopup"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit">

    <Grid
        Padding="20"
        BackgroundColor="White"
        HeightRequest="600"
        RowDefinitions="*,Auto"
        RowSpacing="10"
        WidthRequest="300">

        <!--  ðŸ‘‡ Row 0: Scrollable list of species  -->
        <ScrollView Grid.Row="0">
            <VerticalStackLayout Spacing="10">
                <Label
                    FontAttributes="Bold"
                    FontSize="18"
                    Text="Select Species" />

                <CollectionView x:Name="SpeciesList" SelectionMode="Multiple">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <HorizontalStackLayout Padding="5" Spacing="10">
                                <CheckBox
                                    CheckedChanged="OnCheckChanged"
                                    IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                    VerticalOptions="Center" />

                                <Label
                                    FontSize="16"
                                    Text="{Binding CommonName}"
                                    TextColor="Black"
                                    VerticalOptions="Center" />
                            </HorizontalStackLayout>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </VerticalStackLayout>
        </ScrollView>

        <!--  ðŸ‘‡ Row 1: Fixed label + Done button  -->
        <VerticalStackLayout Grid.Row="1" Spacing="6">
            <Label
                x:Name="SelectedStatusLabel"
                FontAttributes="Italic"
                FontSize="14"
                LineBreakMode="WordWrap"
                Text=""
                TextColor="Gray" />

            <Button Clicked="OnDoneClicked" Text="Done" />
        </VerticalStackLayout>
    </Grid>
</toolkit:Popup>
