<ContentPage
    x:Class="SfDatagrid.SFDosagePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:converters="clr-namespace:SfDatagrid.Converters"
    xmlns:syncfusion="http://schemas.syncfusion.com/maui"
    xmlns:viewModels="clr-namespace:SfDatagrid"
    Title="Dosage Info">

    <ContentPage.BindingContext>
        <viewModels:SFDosagePageViewModel />
    </ContentPage.BindingContext>

    <ContentPage.Resources>
        <Style x:Key="customHeaderStyle" TargetType="syncfusion:DataGridHeaderCell">
            <Setter Property="Background" Value="#0074E3" />
            <Setter Property="TextColor" Value="White" />
            <Setter Property="FontAttributes" Value="Bold" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="FontFamily" Value="TimesNewRoman" />
        </Style>

        <Style x:Key="customCellStyle" TargetType="syncfusion:DataGridCell">
            <Setter Property="Background" Value="#AFD5FB" />
            <Setter Property="TextColor" Value="#212121" />
            <Setter Property="FontAttributes" Value="Italic" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="FontFamily" Value="TimesNewRoman" />
        </Style>
    </ContentPage.Resources>

    <ContentPage.Content>
        <ScrollView>
            <Grid Padding="10" RowSpacing="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!--  ðŸ”½ Select Species  -->
                <Label
                    Grid.Row="0"
                    FontAttributes="Bold"
                    FontSize="18"
                    HorizontalOptions="Start"
                    Text="Select Species"
                    TextColor="Black"
                    TextDecorations="Underline">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnSelectSpeciesClicked" />
                    </Label.GestureRecognizers>
                </Label>

                <!--  âž• âž– Buttons  -->
                <Grid Grid.Row="1" ColumnSpacing="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <Button
                        Grid.Column="0"
                        BackgroundColor="LightGreen"
                        Command="{Binding AddRowCommand}"
                        Text="Add Row" />

                    <Button
                        Grid.Column="1"
                        BackgroundColor="LightCoral"
                        Command="{Binding DeleteRowCommand}"
                        Text="Delete Row" />
                </Grid>

                <!--  ðŸ§¾ DataGrid  -->
                <ScrollView Grid.Row="2" Orientation="Horizontal">
                    <Grid WidthRequest="1600">
                        <syncfusion:SfDataGrid
                            x:Name="DataGrid"
                            AllowDeleting="True"
                            AllowEditing="True"
                            AllowResizingColumns="True"
                            DefaultColumnWidth="140"
                            GridLinesVisibility="Both"
                            HeaderGridLinesVisibility="Both"
                            HeaderRowHeight="0"
                            HeightRequest="300"
                            ItemsSource="{Binding Areas}"
                            NavigationMode="Cell"
                            QueryRowHeight="DataGrid_QueryRowHeight"
                            SelectionChanged="Datagrid_SelectionChanged"
                            SelectionMode="Single">

                            <syncfusion:DataGridTextColumn MappingName="AreaName" />
                            <syncfusion:DataGridTextColumn MappingName="Temperature" />
                            <syncfusion:DataGridNumericColumn MappingName="EstimatedHalfLossTime" />
                            <syncfusion:DataGridNumericColumn MappingName="ExposureTime" />
                            <syncfusion:DataGridNumericColumn MappingName="AreaVolume" />
                            <syncfusion:DataGridNumericColumn MappingName="UserDefinedCT" />
                            <syncfusion:DataGridTextColumn MappingName="TargetCT" />
                            <syncfusion:DataGridTextColumn
                                CellStyle="{StaticResource customCellStyle}"
                                HeaderStyle="{StaticResource customHeaderStyle}"
                                MappingName="FumigantRequired" />
                            <syncfusion:DataGridTextColumn
                                CellStyle="{StaticResource customCellStyle}"
                                HeaderStyle="{StaticResource customHeaderStyle}"
                                MappingName="InitialConcentration" />
                        </syncfusion:SfDataGrid>
                    </Grid>
                </ScrollView>

                <!--  ðŸŽ¯ Calculate Button  -->
                <Button
                    x:Name="CalculateButton"
                    Grid.Row="3"
                    BackgroundColor="LightSkyBlue"
                    Clicked="OnCalculateClicked"
                    HorizontalOptions="Start"
                    Text="Calculate"
                    TextColor="Black" />

                <!--  ðŸ“Š Results Grid  -->
                <Grid
                    x:Name="ResultsGrid"
                    Grid.Row="4"
                    Padding="0,20,0,0"
                    ColumnSpacing="20"
                    IsVisible="False">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!--  Column 0  -->
                    <Grid Grid.Column="0" RowSpacing="2">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Label
                            Grid.Row="0"
                            FontAttributes="Bold"
                            FontSize="14"
                            Text="Total Amount of Fumigant" />
                        <Label
                            Grid.Row="1"
                            FontSize="16"
                            Text="891.90 lb" />
                        <Label
                            Grid.Row="2"
                            FontSize="14"
                            Text="7.14 Cylinders" />
                    </Grid>

                    <!--  Column 1  -->
                    <Grid Grid.Column="1" RowSpacing="2">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Label
                            Grid.Row="0"
                            FontAttributes="Bold"
                            FontSize="14"
                            Text="Total Structure Volume" />
                        <Label
                            Grid.Row="1"
                            FontSize="16"
                            Text="194,909 ftÂ³" />
                    </Grid>

                    <!--  Column 2  -->
                    <Grid Grid.Column="2" RowSpacing="2">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Label
                            Grid.Row="0"
                            FontAttributes="Bold"
                            FontSize="14"
                            Text="Average Concentration" />
                        <Label
                            Grid.Row="1"
                            FontSize="16"
                            Text="71.36 oz/1000ftÂ³" />
                    </Grid>

                    <!--  Column 3  -->
                    <Grid Grid.Column="3" RowSpacing="2">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Label
                            Grid.Row="0"
                            FontAttributes="Bold"
                            FontSize="14"
                            Text="Average HLT" />
                        <Label
                            Grid.Row="1"
                            FontSize="16"
                            Text="12.00 h" />
                    </Grid>

                    <!--  Column 4  -->
                    <Grid Grid.Column="4" RowSpacing="2">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Label
                            Grid.Row="0"
                            FontAttributes="Bold"
                            FontSize="14"
                            Text="Average CT" />
                        <Label
                            Grid.Row="1"
                            FontSize="16"
                            Text="926.50 ozÂ·h/1000ftÂ³" />
                    </Grid>
                </Grid>
            </Grid>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>
